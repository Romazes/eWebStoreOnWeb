@model ShoppingCartItem

<h2 class="border-bottom border-bottom">Confirm Tea removal.</h2>
<h5 class="mt-3">Are you sure to remove "@Model.Product.Name?"</h5>
<div class="row align-items-center justify-content-center">
    <a class="btn btn-danger mt-4" asp-action="RemoveFromShoppingCart" asp-route-productId="@Model.Product.ProductId">Remove tea</a>
</div>