@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "All Roles";
}

<h2>Role management</h2>

@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">No Roles available</td></tr>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr>
            <th>Role ID</th>
            <th>Role name</th>
            <th>Actions</th>
        </tr>
        @foreach (IdentityRole role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a class="btn btn-primary text-white" asp-action="EditRole" asp-route-id="@role.Id"><i class="fas fa-edit"></i></a>&nbsp;
                    <a class="btn btn-success text-white" asp-action="Details" asp-route-id="@role.Id"><i class="fas fa-list-alt"></i></a>&nbsp;
                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@role.Id"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </table>
}

<a class="btn btn-primary" asp-action="AddRole">Add new role</a>

