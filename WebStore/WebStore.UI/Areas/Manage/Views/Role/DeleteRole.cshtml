@model IdentityRole

@{
    ViewData["Title"] = "DeleteRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Are you sure you want to delete role: @Model.Name?</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="DeleteRole">
        <a class="btn btn-secondary text-white" asp-action="Index" accesskey="b">
            <i class="fas fa-hand-point-left"></i> <u>B</u>ack to list
        </a>
        @*<input type="hidden" asp-for="Id" />*@
        <button type="submit" onclick="return confirm('Are you sure you want to delete role: @Model.Name?');" class="btn btn-danger text-white" accesskey="t">
            <i class="fas fa-trash-alt"></i> Dele<u>t</u>e
        </button>
    </form>
</div>
