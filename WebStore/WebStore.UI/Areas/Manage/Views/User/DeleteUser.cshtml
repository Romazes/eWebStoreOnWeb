@model EditUserViewModel

@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Are you sure you want to delete user: @Model.UserName?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Birthdate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Birthdate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
    </dl>

    <div class="card">
        <div class="card-header">
            <div class="font-weight-bolder"><h3>User roles:</h3></div>
        </div>
        <div class="card-body">
            <ol>
                @if (Model.Roles.Any())
                {

                    foreach (var role in Model.Roles)
                    {
                        <li>@role</li>
                    }
                }
                else
                {
                    <li class="font-weight-bold">None at the moment</li>
                }
            </ol>
        </div>
    </div>
</div>
<p>&nbsp;</p>
<form asp-action="DeleteUser">
    <div class="form-group">
        <a class="btn btn-secondary text-white" asp-action="Index" accesskey="b">
            <i class="fas fa-hand-point-left"></i> <u>B</u>ack to list
        </a>
        @*<input type="hidden" asp-for="Id" />*@
        <button type="submit" onclick="return confirm('Are you sure you want to delete user: @Model.UserName?');" class="btn btn-danger text-white" accesskey="t">
            <i class="fas fa-trash-alt"></i> Dele<u>t</u>e
        </button>
    </div>
</form>