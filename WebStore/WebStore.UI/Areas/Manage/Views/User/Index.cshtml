@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "All Users";
}

<h1>Users</h1>

<p>
    <a class="btn btn-success text-white" asp-action="AddUser" accesskey="n"><i class="fas fa-plus-square"></i>&nbsp;Add <u>N</u>ew User</a>
</p>

@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr>
            <th>User ID</th>
            <th>User name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        @foreach (ApplicationUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary text-white" asp-action="EditUser" asp-route-id="@user.Id"><i class="fas fa-edit"></i></a>&nbsp;
                        <a class="btn btn-success text-white" asp-action="Details" asp-route-id="@user.Id"><i class="fas fa-list-alt"></i></a>&nbsp;
                        <a class="btn btn-danger text-white" asp-action="DeleteUser" asp-route-id="@user.Id"><i class="fas fa-trash-alt"></i></a>&nbsp;
                    </div>
                </td>
            </tr>
        }
    </table>
}